{
  "compilerOptions": {
    "target": "ES2018",
    "jsx": "preserve",
    "module": "ESNext",
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "moduleResolution": "Bundler",
    "baseUrl": "./",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["vite/client"]
  },
  "include": ["src/**/*"]
}
